<?xml version="1.0" encoding="UTF-8"?>
<Module>
  <ModulePrefs title="Collaboration on PA Data - Version 1" 
               description="This is a first POC on how to collaborate on PA Data"
               author="Rolf Mueller"
               author_email="rolf.mueller.au@gmail.com" 
               title_url="http://www.accenture.com" >
    <Require feature="dynamic-height" />
  </ModulePrefs>
  <UserPref name="mycolor" display_name="Color" default_value="Lime" datatype="string" />
  <Content type="html">
  <![CDATA[
  <script type="text/javascript">
   // Get the preferences for the current user
   var prefs = new gadgets.Prefs();
 
   function hello_world() {
     var html="Hello World!";
     document.getElementById("content_div").style.backgroundColor=prefs.getString("mycolor");
     document.getElementById("content_div").innerHTML = html;
     gadgets.window.adjustHeight();
   }	

  gadgets.util.registerOnLoadHandler(hello_world); 
  </script>
  <div id="content_div"></div>

  <div id="div_pa_pernr"><label for=pa_pernr>Personel number: <input type=text name=pa_pernr disabled value="4711" size=20></label></div>
  <div id="div_pa_bukrs"><label for=pa_pernr>New Company Code: <input type=text name=pa_bukrs size=20></label></div>

  ]]>
  </Content>
</Module>